<!-- 777-200
Franck.VMD
-->

<PropertyList>

<path>OHpanel1.ac</path>

    <effect>
        <name>777-interior</name>
        <inherits-from>Aircraft/777-VMD/Models/Effects/777-interior</inherits-from>
        <object-name>OHpanel</object-name>
     </effect>

    <effect>
        <inherits-from>Effects/model-transparent</inherits-from>
        <object-name>OHpanel.Lettering_Day</object-name>
    </effect>

    <animation>
        <type>material</type>
        <object-name>OHpanel.Lettering_Day</object-name>
        <condition>
            <greater-than>
                <property>/sim/time/sun-angle-rad</property>
                <value>1.70</value>
            </greater-than>
             <greater-than>
                <property>systems/electrical/CPT-FLT-INST</property>
                <value>24.0</value>
             </greater-than>
        </condition>
        <emission>
            <red>0.2</red>
            <green>0.8</green>
            <blue>0.2</blue>
            <factor-prop>controls/lighting/overhead-intencity</factor-prop>
        </emission>
    </animation>

    <animation>
        <type>material</type>
        <object-name>OHpanel</object-name>
        <condition>
                <greater-than>
                <property>systems/electrical/CPT-FLT-INST</property>
                <value>24.0</value>
             </greater-than>
                <property>controls/lighting/cockpit</property>
        </condition>
        <emission>
            <red>0.2</red>
            <green>0.2</green>
            <blue>0.2</blue>
            <factor-prop>controls/lighting/dome-intencity</factor-prop>
        </emission>
    </animation>

    <animation>
        <type>material</type>
                <object-name>OHpanel.Lettering_Day</object-name>
        <condition>
		<greater-than>
                <property>systems/electrical/CPT-FLT-INST</property>
                <value>24.0</value>
             </greater-than>
        </condition>
        <emission>
            <red>1.0</red>
            <green>1.0</green>
            <blue>1.0</blue>
            <factor-prop>controls/lighting/master-bright-intencity</factor-prop>
        </emission>
    </animation>

</PropertyList>
