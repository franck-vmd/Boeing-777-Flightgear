<?xml version="1.0"?>

<PropertyList>

    <path>bus-ba.ac</path>

        <animation>
		<type>material</type>
		<texture>bus.png</texture>
                <object-name>Bus_Front</object-name>
                <object-name>Bus_Back</object-name>
       </animation>

       <effect>
         <inherits-from>Aircraft/777-VMD/Models/Effects/reflect14</inherits-from>
                <object-name>Bus_Front</object-name>
                <object-name>Bus_Back</object-name>
</effect>
    
	<animation>
		<type>select</type>
        <object-name>Bus_Front</object-name>
        <object-name>Planefront</object-name>
		<condition>
            <equals>
                <property>services/bus/bus1-enable</property>
                <value>1</value>
            </equals>
		</condition>
	</animation>
    
	<animation>
		<type>select</type>
        <object-name>Bus_Back</object-name>
        <object-name>Planeback</object-name>
		<condition>
            <equals>
                <property>services/bus/bus2-enable</property>
                <value>1</value>
            </equals>
		</condition>
	</animation>
  
    <animation>
        <type>translate</type>
        <object-name>Bus_Front</object-name>
        <object-name>Bus_Back</object-name>
        <property>gear/gear[0]/compression-norm</property>
        <interpolation>
            <entry><ind>0.18</ind><dep>0</dep></entry>
            <entry><ind>0.21</ind><dep>0.03</dep></entry>
        </interpolation>
        <axis>
            <x>0</x>
            <y>0</y>
            <z>1</z>
        </axis>
    </animation>
    
    <animation>
        <type>pick</type>
        <object-name>Bus_Front</object-name>
        <action>
            <button>0</button>
            <binding>
                <command>property-toggle</command>
                <property>services/bus/bus1-enable</property>
            </binding>
        </action>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>Bus_Back</object-name>
        <action>
            <button>0</button>
            <binding>
                <command>property-toggle</command>
                <property>services/bus/bus2-enable</property>
            </binding>
        </action>
    </animation>

</PropertyList>
