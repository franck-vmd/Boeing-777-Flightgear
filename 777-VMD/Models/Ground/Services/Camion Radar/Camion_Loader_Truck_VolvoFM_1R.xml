<?xml version="1.0"?>
<PropertyList>

	<!-- catering truck camion radar implemented on the 777 by franck VMD -->
	<path>camion radar.ac</path>
	
	# Visible or not
	
	<animation>
		<type>material</type>
		<texture>volvo_deicing_truck.png</texture>
                <object-name>camion</object-name>
       </animation>
       
       <animation>
		<type>material</type>
		<texture>complet.png</texture>
                <object-name>bac nacelle</object-name>
                <object-name>cube1</object-name>
                <object-name>cube2</object-name>
                <object-name>cube3</object-name>
                <object-name>cube4</object-name>
                <object-name>cube5</object-name>
                <object-name>siren</object-name>
                <object-name>Light</object-name>
       </animation>
	
	
	<effect>
         <inherits-from>Aircraft/777-VMD/Models/Effects/reflect8</inherits-from>
                <object-name>camion</object-name>
       </effect>
       
       <effect>
         <inherits-from>Aircraft/777-VMD/Models/Effects/reflect13</inherits-from>
                <object-name>bac_nacelle</object-name>
                <object-name>cube1</object-name>
                <object-name>cube2</object-name>
                <object-name>cube3</object-name>
                <object-name>cube4</object-name>
                <object-name>cube5</object-name>
                <object-name>siren</object-name>
       </effect>
       
	<animation>
		<type>select</type>
		<object>camion</object>
		<object>bac_nacelle</object>
		<object>cube1</object>
		<object>cube2</object>
		<object>cube3</object>
		<object>cube4</object>
		<object>cube5</object>
		<object>siren</object>
                <object>Light</object>
		<condition>
			<and>
				<equals>
					<property>services/camion/enable4</property>
					<value>1</value>
				</equals>
				<less-than>
						<property>velocities/groundspeed-kt</property>
					<value>1</value>
				</less-than>
			</and>
		</condition>
	</animation>

          <animation>
    <type>rotate</type>
    <object-name>Light</object-name>
    <property>/sim/time/elapsed-sec</property>
    <factor>-270.0</factor>
    <center>
      <x-m>3.88285</x-m>
      <y-m>-0.863759</y-m>
      <z-m>4.06914</z-m>
    </center>
    <axis>
      <x>0</x>
      <y>0</y>
      <z>1</z>
    </axis>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>Light</object-name>
  </animation>

  <animation>
    <type>alpha-test</type>
    <alpha-factor>0.01</alpha-factor>
  </animation>
	
	# Pick animations
	
	<animation>
        <type>pick</type>
		<object-name>bac nacelle</object-name>
                <object-name>bobr</object-name>
                <object-name>cube1</object-name>
                <object-name>cube2</object-name>
                <object-name>cube3</object-name>
                <object-name>cube4</object-name>
        <action>
            <button>0</button>
            <binding>
                <command>property-toggle</command>
                <property>services/camion/move4</property>
            </binding>
        </action>
    </animation>
    
    

    <animation>
        <type>pick</type>
		<object-name>camion</object-name>
        <action>
            <button>0</button>
            <binding>
                <command>property-toggle</command>
                <property>services/camion/enable4</property>
            </binding>
        </action>
    </animation>
 	
	# Elevator Animation

	<animation>
		<type>rotate</type>
		<object-name>cube1</object-name>
		<property>services/camion/position4</property>
		<factor>100</factor>
		<center>
			<x-m>-0.79144</x-m>
			<y-m>0</y-m>
			<z-m>1.286</z-m>
		</center>
		<axis>
		        <x>0</x>
			<y>0</y>
			<z>1</z>
		</axis>
	</animation>
	
	<animation>
		<type>rotate</type>
		<object-name>bac nacelle</object-name>
		<property>services/camion/position4</property>
		<factor>-100</factor>
		<center>
			<x-m>3.44294</x-m>
			<y-m>0</y-m>
			<z-m>2.11635</z-m>
		</center>
		<axis>
		        <x>0</x>
			<y>0</y>
			<z>1</z>
		</axis>
	</animation>
	
	<animation>
		<type>rotate</type>
		<object-name>cube4</object-name>
		<property>services/camion/position4</property>
		<factor>15</factor>
		<center>
			<x-m>3.20459</x-m>
			<y-m>0</y-m>
			<z-m>1.7951</z-m>
		</center>
		<axis>
		        <x>0</x>
			<y>1</y>
			<z>0</z>
		</axis>
	</animation>
	
	<animation>
		<type>rotate</type>
		<object-name>cube2</object-name>
		<property>services/camion/position4</property>
		<factor>-15</factor>
		<center>
			<x-m>-1.92283</x-m>
			<y-m>0</y-m>
			<z-m>1.79511</z-m>
		</center>
		<axis>
		        <x>0</x>
			<y>1</y>
			<z>0</z>
		</axis>
	</animation>
	
    <animation>
        <type>translate</type>
        <object-name>cube3</object-name>
        <property>services/camion/position4</property>
        <factor>1</factor>
        <axis>
            <x>1.0</x>
            <y>0</y>
            <z>0</z>
        </axis>
    </animation>
	
<animation>
	<type>translate</type>
	        <object>camion</object>
		<object>bac_nacelle</object>
                <object>Light</object>
		<object>cube1</object>
		<object>cube2</object>
		<object>cube3</object>
		<object>cube4</object>
		<object>cube5</object>
		<object>siren</object>
	<property>gear/gear[0]/compression-norm</property>
	<interpolation>
		<entry><ind>0.15</ind><dep>0.0</dep></entry>
		<entry><ind>0.40</ind><dep>0.15</dep></entry>
	</interpolation>
	<axis>
		<x>0</x>
		<y>0</y>
		<z>1</z>
	</axis>
</animation>	

</PropertyList>
